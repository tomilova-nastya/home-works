<div class="messagesHeader">
    <h2>Чат</h2>
    <span class="caption">Количество активных участников {{ activeParticipantsCount }}</span>
</div>
<div class="messagesWrapper">
    {{#each messages}}
        <div class="participantPhoto" style="background-image: {{ author.photoUrl }}"></div>
        <div class="message">{{ message }}</br><span class="caption">{{ time }}</span></div>
    {{/each}}
</div>
<div class="messagesBottom">
    <input class="chat-form__messageInput input_text" type="text" placeholder="Введите сообщение..."><input class="chat-form__sendButton input_button" type="button" value="Отправить">
</div>